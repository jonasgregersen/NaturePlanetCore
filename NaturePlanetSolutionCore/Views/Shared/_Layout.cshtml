<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - NaturePlanetSolutionCore</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/NaturePlanetSolutionCore.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/cart.css"/>
    <link rel="stylesheet" href="~/css/checkout.css"/>
    <link rel="stylesheet" href="~/css/orderhistory.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body style="display: flex; flex-direction: column; min-height: 100vh;">
<header>
    <div class="header-top">
        <div class="logo-container">
            <a class="logo-ref" href="/">
                <img class="logo-img" src="~/Assets/Images/NaturePlanet_logo.svg"/>
            </a>
        </div>
        <div class="search-container">
            @using (Html.BeginForm("Search", "Products", FormMethod.Get))
            {
                <input class="search-box" name="query" type="text" placeholder="Søg efter produkter" />
                <button class="search-button" type="submit">
                    <i class="search-icon">&#128269;</i>
                </button>
            }

        </div>
        <div class="nav-container">
            <ul class="nav-elements">
                    <li>
                        @await Component.InvokeAsync("Cart")
                        </li>
                <li>
                        
                    <div class="user-dropdown">
                        <p>User</p>
                        <div class="user-dropdown-content">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a asp-controller="User" asp-action="Profile">Profile</a>
                                <a asp-controller="User" asp-action="ViewOrders">Order History</a>
                                <a asp-controller="User" asp-action="GetUserRecommendations">My recommended products</a>
                                <a asp-controller="User" asp-action="Logout">Logout</a>
                            }
                            else
                            {
                                <a asp-controller="User" asp-action="Login" class="login-button">Log ind</a>
                                <a asp-controller="User" asp-action="Register">Registrer</a>
                            }
                        </div>
                        
                    </div>
                </li>
                <li>
                    <div class="language-dropdown">
                        <p>Language</p>
                        <div class="language-dropdown-content">
                            <a asp-controller="Home" asp-action="SetLanguage" asp-route-culture="en">English</a>
                            <a asp-controller="Home" asp-action="SetLanguage" asp-route-culture="da">Dansk</a>
                            <a asp-controller="Home" asp-action="SetLanguage" asp-route-culture="de">Deutsch</a>
                            <a asp-controller="Home" asp-action="SetLanguage" asp-route-culture="fr">Français</a>
                        </div>
                    </div>
                </li>
                <li>
                    <div class="region-container">
                        <select class="region-button form-select">
                            <option>Europe</option>
                            <option>North America</option>
                        </select>
                    </div>
                </li>
            </ul>
            
        </div>
    </div>
    <nav class="category-nav">
        @await Component.InvokeAsync("CategoryMenu")
    </nav>
</header>

<div class="container flex-grow-1">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

