@model NaturePlanetSolutionCore.Models.ViewModels.RegisterViewModel

<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-4 p-4 shadow rounded bg-white">
        <h2 class="text-center mb-4 text-success">Create Account</h2>

        <form asp-action="Register" method="post" novalidate>
            <div asp-validation-summary="All">
            <div class="mb-3">
                <label asp-for="FullName" class="form-label fw-semibold"></label>
                <input asp-for="FullName" class="form-control" placeholder="Full Name"/>
                <span asp-validation-for="FullName" class="text-danger small"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-semibold"></label>
                <input asp-for="Email" class="form-control" placeholder="you@example.com" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label fw-semibold"></label>
                <input asp-for="Password" class="form-control" placeholder="Enter your password" type="password" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label fw-semibold"></label>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Enter your password" type="password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>
            <div class="d-grid mt-4">
                <button type="submit" class="btn btn-success btn-lg rounded-pill">
                    Register
                </button>
            </div>

            <div class="text-center mt-3">
                <a asp-action="Login" class="text-decoration-none text-success fw-semibold">
                    Already a user? Login here
                </a>
            </div>
            </div>
        </form>
    </div>
</div>

<style>
    body {
        background-color: #f5f8f3; /* lys naturfarve */
    }

    .form-control:focus {
        border-color: #28a745;
        box-shadow: 0 0 5px rgba(40, 167, 69, 0.4);
    }

    h2 {
        font-family: 'Segoe UI', sans-serif;
    }
</style>
